  # GitLab - Complete DevOps Platform
  # ==========================================================================
  gitlab:
    image: gitlab/gitlab-ee:{{ .services.gitlab.version | default "latest" }}-ee.0
    container_name: gitlab
    restart: unless-stopped
    hostname: git.{{ .tenant.domain }}

    environment:
      GITLAB_OMNIBUS_CONFIG: |
        external_url 'https://git.{{ .tenant.domain }}'
        gitlab_rails['gitlab_shell_ssh_port'] = 2222
        # Disable Prometheus to save resources (optional)
        prometheus_monitoring['enable'] = {{ index .services.gitlab "prometheus_enabled" | default "false" }}
        # Configure SMTP if needed
        {{- if index .services.gitlab "smtp_enabled" }}
        gitlab_rails['smtp_enable'] = true
        gitlab_rails['smtp_address'] = "{{ index .services.gitlab "smtp_address" }}"
        gitlab_rails['smtp_port'] = {{ index .services.gitlab "smtp_port" }}
        gitlab_rails['smtp_user_name'] = "{{ index .services.gitlab "smtp_user" }}"
        gitlab_rails['smtp_password'] = "{{ index .services.gitlab "smtp_password" }}"
        gitlab_rails['smtp_domain'] = "{{ .tenant.domain }}"
