{{- end }}
{{- end }}

# ============================================================================
# AUTHENTIK - Identity Provider
# ============================================================================

{{- if index $services "authentik" }}
{{- if (index $services "authentik").enabled }}
{{- $authentik := index $services "authentik" }}
AUTHENTIK_DB_USER={{ $authentik.AUTHENTIK_DB_USER | default "authentik" }}
AUTHENTIK_DB_PASSWORD={{ $authentik.AUTHENTIK_DB_PASSWORD | default "CHANGE_ME_GENERATE_SECURE_PASSWORD" }}
