SMTP_PASSWORD={{ $authentik.SMTP_PASSWORD }}
SMTP_FROM={{ $authentik.SMTP_FROM }}
{{- end }}
{{- end }}
{{- end }}

# ============================================================================
# IMMICH - Photo Management
# ============================================================================

{{- if index $services "immich" }}
{{- if (index $services "immich").enabled }}
{{- $immich := index $services "immich" }}
IMMICH_VERSION={{ $immich.IMMICH_VERSION | default "v2" }}
DB_USERNAME={{ $immich.DB_USERNAME | default "postgres" }}
DB_PASSWORD={{ $immich.DB_PASSWORD | default "CHANGE_ME_GENERATE_SECURE_PASSWORD" }}
DB_DATABASE_NAME={{ $immich.DB_DATABASE_NAME | default "immich" }}
UPLOAD_LOCATION={{ $immich.UPLOAD_LOCATION | default "./library" }}
DB_DATA_LOCATION={{ $immich.DB_DATA_LOCATION | default "./postgres" }}

{{- if $immich.IMMICH_MEDIA_PATH }}
IMMICH_MEDIA_PATH={{ $immich.IMMICH_MEDIA_PATH }}
{{- end }}
{{- if $immich.IMMICH_TRANSCODING_PRESET }}
IMMICH_TRANSCODING_PRESET={{ $immich.IMMICH_TRANSCODING_PRESET }}
{{- end }}
{{- if $immich.IMMICH_ML_PRESET }}
IMMICH_ML_PRESET={{ $immich.IMMICH_ML_PRESET }}
{{- end }}
{{- end }}
{{- end }}

# ============================================================================
# JELLYFIN - Media Server
# ============================================================================

{{- if index $services "jellyfin" }}
{{- if (index $services "jellyfin").enabled }}
{{- $jellyfin := index $services "jellyfin" }}
JELLYFIN_PUID={{ $jellyfin.JELLYFIN_PUID | default "1000" }}
JELLYFIN_PGID={{ $jellyfin.JELLYFIN_PGID | default "1000" }}
JELLYFIN_MEDIA_MOVIES={{ $jellyfin.JELLYFIN_MEDIA_MOVIES | default "./media/movies" }}
