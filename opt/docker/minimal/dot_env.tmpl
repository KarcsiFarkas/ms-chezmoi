GITEA_REQUIRE_SIGNIN={{ $gitea.GITEA_REQUIRE_SIGNIN | default "false" }}
{{- end }}
{{- end }}

# ============================================================================
# VAULTWARDEN - Password Manager
# ============================================================================

{{- if index $services "vaultwarden" }}
{{- if (index $services "vaultwarden").enabled }}
{{- $vaultwarden := index $services "vaultwarden" }}
VAULTWARDEN_ADMIN_TOKEN={{ $vaultwarden.VAULTWARDEN_ADMIN_TOKEN | default "CHANGE_ME_GENERATE_SECURE_ADMIN_TOKEN" }}
