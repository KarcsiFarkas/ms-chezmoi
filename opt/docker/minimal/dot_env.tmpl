VAULTWARDEN_DOMAIN={{ $vaultwarden.VAULTWARDEN_DOMAIN | default (printf "https://vault.%s" .tenant.domain) }}
{{- end }}
{{- end }}

# ============================================================================
# NEXTCLOUD - File Sync and Storage
# ============================================================================

{{- if index $services "nextcloud" }}
