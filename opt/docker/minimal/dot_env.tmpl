JELLYFIN_MEDIA_MUSIC={{ $jellyfin.JELLYFIN_MEDIA_MUSIC | default "./media/music" }}
{{- end }}
{{- end }}

# ============================================================================
# GITEA - Git Hosting
# ============================================================================

{{- if index $services "gitea" }}
{{- if (index $services "gitea").enabled }}
{{- $gitea := index $services "gitea" }}
