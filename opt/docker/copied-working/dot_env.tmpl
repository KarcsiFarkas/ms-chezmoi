# ============================================================================
# Docker Environment Configuration
# ============================================================================
# Generated by Chezmoi from copied working configuration
# Tenant: {{ .tenant.name }}
# Domain: {{ .tenant.domain }}
# Runtime: {{ .deployment.runtime }}
# Generated: {{ now | date "2006-01-02 15:04:05 MST" }}
# ============================================================================

# ----------------------------------------------------------------------------
# Core Configuration
# ----------------------------------------------------------------------------
DOMAIN={{ .tenant.domain }}
TIMEZONE={{ .deployment.timezone }}

# ----------------------------------------------------------------------------
# Traefik Configuration
# ----------------------------------------------------------------------------
TRAEFIK_ACME_EMAIL={{ .services.traefik.acme_email }}

# ----------------------------------------------------------------------------
# Authentik Configuration
# ----------------------------------------------------------------------------
{{- if .services.authentik.enabled }}
AUTHENTIK_DB_USER={{ .services.authentik.db_user }}
AUTHENTIK_DB_PASSWORD={{ .services.authentik.db_password }}
AUTHENTIK_SECRET_KEY={{ .services.authentik.secret_key }}
{{- end }}

# ----------------------------------------------------------------------------
# Immich Configuration
# ----------------------------------------------------------------------------
{{- if .services.immich.enabled }}
IMMICH_VERSION={{ .services.immich.version }}
DB_USERNAME={{ .services.immich.db_user }}
DB_PASSWORD={{ .services.immich.db_password }}
DB_DATABASE_NAME={{ .services.immich.db_name }}
UPLOAD_LOCATION=./library
DB_DATA_LOCATION=./postgres
{{- end }}

# ----------------------------------------------------------------------------
# Jellyfin Configuration
# ----------------------------------------------------------------------------
{{- if .services.jellyfin.enabled }}
JELLYFIN_PUID={{ .services.jellyfin.puid }}
JELLYFIN_PGID={{ .services.jellyfin.pgid }}
JELLYFIN_MEDIA_MOVIES=./media/movies
JELLYFIN_MEDIA_TV=./media/tv
JELLYFIN_MEDIA_MUSIC=./media/music
{{- end }}

# ----------------------------------------------------------------------------
# Gitea Configuration
# ----------------------------------------------------------------------------
{{- if .services.gitea.enabled }}
GITEA_UID={{ .services.gitea.uid }}
GITEA_GID={{ .services.gitea.gid }}
GITEA_DISABLE_REGISTRATION={{ .services.gitea.disable_registration }}
GITEA_REQUIRE_SIGNIN={{ .services.gitea.require_signin }}
{{- end }}

# ----------------------------------------------------------------------------
# Vaultwarden Configuration
# ----------------------------------------------------------------------------
{{- if .services.vaultwarden.enabled }}
VAULTWARDEN_ADMIN_TOKEN={{ .services.vaultwarden.admin_token }}
VAULTWARDEN_SIGNUPS_ALLOWED={{ .services.vaultwarden.signups_allowed }}
{{- end }}

# ----------------------------------------------------------------------------
# Nextcloud Configuration
# ----------------------------------------------------------------------------
{{- if .services.nextcloud.enabled }}
NEXTCLOUD_ADMIN_USER={{ .services.nextcloud.admin_user }}
NEXTCLOUD_ADMIN_PASSWORD={{ .services.nextcloud.admin_password }}
NEXTCLOUD_DB_USER={{ .services.nextcloud.db_user }}
NEXTCLOUD_DB_PASSWORD={{ .services.nextcloud.db_password }}
{{- end }}

# ----------------------------------------------------------------------------
# Homepage Configuration
# ----------------------------------------------------------------------------
{{- if .services.homepage.enabled }}
HOMEPAGE_PUID={{ .services.homepage.puid }}
HOMEPAGE_PGID={{ .services.homepage.pgid }}
HOMEPAGE_VAR_DOMAIN={{ .tenant.domain }}
SERVICE_HOST_HOMEPAGE={{ .tenant.domain }}
SERVICE_HOST_TRAEFIK=traefik.{{ .tenant.domain }}
SERVICE_HOST_VAULTWARDEN=vault.{{ .tenant.domain }}
SERVICE_HOST_GITEA=git.{{ .tenant.domain }}
SERVICE_HOST_IMMICH=photos.{{ .tenant.domain }}
{{- end }}

# ----------------------------------------------------------------------------
# Docker API Version
# ----------------------------------------------------------------------------
DOCKER_API_VERSION=1.44
