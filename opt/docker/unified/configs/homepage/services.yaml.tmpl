# ============================================================================
# Homepage Dashboard - Services Configuration
# ============================================================================
# This file defines the services shown on the Homepage dashboard
#
# Generated by: Chezmoi
# Tenant: {{ .tenant.name }}
# Domain: {{ .tenant.domain }}
# ============================================================================

---
# Infrastructure Services
- Infrastructure:
    - Traefik:
        icon: traefik.png
        href: https://traefik.{{ .tenant.domain }}
        description: Reverse Proxy & SSL
        widget:
          type: traefik
          url: http://traefik:8080

{{- if (index .services "portainer") }}
{{- if .services.portainer.enabled }}
    - Portainer:
        icon: portainer.png
        href: https://portainer.{{ .tenant.domain }}
        description: Docker Management
        widget:
          type: portainer
          url: http://portainer:9000
          key: {{ .services.portainer.api_key | default "" }}
{{- end }}
{{- end }}

{{- if .services.authentik.enabled }}
    - Authentik:
        icon: authentik.png
        href: https://auth.{{ .tenant.domain }}
        description: SSO & Identity Provider
{{- end }}

# Productivity Services
- Productivity:
{{- if .services.nextcloud.enabled }}
    - Nextcloud:
        icon: nextcloud.png
        href: https://cloud.{{ .tenant.domain }}
        description: File Storage & Collaboration
{{- end }}

{{- if .services.vaultwarden.enabled }}
    - Vaultwarden:
        icon: bitwarden.png
        href: https://vault.{{ .tenant.domain }}
        description: Password Manager
{{- end }}

{{- if .services.gitea.enabled }}
    - Gitea:
        icon: gitea.png
        href: https://git.{{ .tenant.domain }}
        description: Git Repository Hosting
{{- end }}

{{- if (index .services "syncthing") }}
{{- if .services.syncthing.enabled }}
    - Syncthing:
        icon: syncthing.png
        href: https://sync.{{ .tenant.domain }}
        description: File Synchronization
{{- end }}
{{- end }}

# Media Services
{{- if or .services.immich.enabled .services.jellyfin.enabled (and (index .services "qbittorrent") .services.qbittorrent.enabled) }}
- Media:
{{- if .services.immich.enabled }}
    - Immich:
        icon: immich.png
        href: https://photos.{{ .tenant.domain }}
        description: Photo & Video Management
{{- end }}

{{- if .services.jellyfin.enabled }}
    - Jellyfin:
        icon: jellyfin.png
        href: https://media.{{ .tenant.domain }}
        description: Media Streaming
{{- end }}

{{- if (index .services "qbittorrent") }}
{{- if .services.qbittorrent.enabled }}
    - qBittorrent:
        icon: qbittorrent.png
        href: https://torrent.{{ .tenant.domain }}
        description: Torrent Client
        widget:
          type: qbittorrent
          url: http://qbittorrent:8080
{{- end }}
{{- end }}
{{- end }}
